# Claude Code 環境変数設定例
# このファイルを .env にコピーして使用してください

# 基本設定
CLAUDE_LANGUAGE=ja
CLAUDE_COMMIT_FORMAT="<type>(<scope>): <subject>"

# ツール設定
CLAUDE_PACKAGE_MANAGER=mise
CLAUDE_GIT_CLI=gh
CLAUDE_SEARCH_TOOL=gemini

# フォーマット設定
CLAUDE_AUTO_FORMAT=true
CLAUDE_EOL=lf
CLAUDE_INDENT_STYLE=space

# Hooks設定
CLAUDE_HOOKS_ENABLED=true
CLAUDE_POST_USE_HOOK=true

# ファイル命名規則
CLAUDE_PYTHON_GO_NAMING=snake_case
CLAUDE_DEFAULT_NAMING=kebab-case