{
  "version": "1.0.0",
  "name": "Pre-Write Check Configuration",
  "description": "書き込み前のコード品質チェック設定",

  "blocking": {
    "asAny": true,
    "console": false,
    "debugger": true,
    "todo": false
  },

  "allowed": {
    "paths": ["/__tests__/", "/.test.", "/.spec.", "/test/", "/tests/"],
    "patterns": []
  },

  "ignore": {
    "paths": [
      "node_modules/",
      "dist/",
      "build/",
      ".next/",
      "coverage/",
      "public/",
      "*.config.js",
      "*.config.ts",
      ".claude/hooks/"
    ]
  },

  "customPatterns": [
    {
      "pattern": "as\\s+unknown",
      "message": "'as unknown'の使用は禁止されています。適切な型定義を使用してください",
      "severity": "error"
    },
    {
      "pattern": "as\\s+any",
      "message": "'as any'の使用は禁止されています。適切な型定義を使用してください",
      "severity": "error"
    },
    {
      "pattern": ":\\s*any(\\s|\\[|\\)|,|;|$)",
      "message": ": any型アノテーションは禁止されています。適切な型定義を使用してください",
      "severity": "error"
    },
    {
      "pattern": "<any>",
      "message": "ジェネリックでの<any>は禁止されています。適切な型パラメータを使用してください",
      "severity": "error"
    },
    {
      "pattern": ":\\s*unknown\\b",
      "message": ": unknown型は禁止されています。具体的な型定義を使用してください",
      "severity": "error"
    },
    {
      "pattern": "\\bclass\\s+[A-Z]\\w*",
      "message": "class構文は禁止されています。関数型コンポーネントまたはファクトリー関数を使用してください",
      "severity": "error"
    },
    {
      "pattern": "localStorage\\.",
      "message": "localStorageの直接使用は避けてください。ストレージサービスを使用してください",
      "severity": "warning"
    },
    {
      "pattern": "process\\.env\\.",
      "message": "環境変数の直接参照は避けてください。設定サービスを使用してください",
      "severity": "warning"
    },
    {
      "pattern": "\\/\\/\\s*@ts-ignore",
      "message": "@ts-ignoreの使用は避けてください",
      "severity": "error"
    },
    {
      "pattern": "eval\\(",
      "message": "eval()の使用は禁止されています",
      "severity": "error"
    },
    {
      "pattern": "\\/\\/\\s*eslint-disable",
      "message": "eslint-disableコメントは使用禁止です。根本的な解決を行ってください",
      "severity": "error"
    },
    {
      "pattern": "\\/\\*\\s*eslint-disable",
      "message": "eslint-disableコメントは使用禁止です。根本的な解決を行ってください",
      "severity": "error"
    },
    {
      "pattern": "\\/\\/\\s*semgrep-ignore",
      "message": "semgrep-ignoreコメントは使用禁止です。根本的な解決を行ってください",
      "severity": "error"
    },
    {
      "pattern": "\\/\\/\\s*tslint:disable",
      "message": "tslint:disableコメントは使用禁止です。根本的な解決を行ってください",
      "severity": "error"
    },
    {
      "pattern": "\\/\\/\\s*prettier-ignore",
      "message": "prettier-ignoreコメントは使用禁止です。根本的な解決を行ってください",
      "severity": "error"
    },
    {
      "pattern": "\\/\\/\\s*@typescript-eslint\\/no-",
      "message": "TypeScript ESLint無視コメントは使用禁止です。根本的な解決を行ってください",
      "severity": "error"
    },
    {
      "pattern": "\\bswitch\\s*\\(",
      "message": "switch文は使用禁止です。ts-patternライブラリのmatch関数を使用してください",
      "severity": "error"
    }
  ]
}
