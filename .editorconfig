root = true

[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true
indent_style = space
indent_size = 2

[*.{md,markdown}]
trim_trailing_whitespace = false

[Makefile]
indent_style = tab

[*.{yml,yaml}]
indent_size = 2

[*.{js,jsx,ts,tsx}]
indent_size = 2

[*.{json,jsonc}]
indent_size = 2

[*.{sh,bash,zsh}]
indent_size = 4

[*.py]
indent_size = 4

[*.{rb,ruby}]
indent_size = 2

[*.{go}]
indent_style = tab

[*.{html,htm,xml}]
indent_size = 2

[*.{css,scss,sass,less}]
indent_size = 2